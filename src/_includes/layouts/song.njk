{% extends 'layouts/base.njk' %}

{# Intro content #}
{% set introHeading = title %}
{% set introSummary %}
{% endset %}

{% block content %}
  <main>
    {% include "partials/components/intro.njk" %}
    <article class="hymn-article">
      <div class="hymn-article__content gr">
        {{ content | safe }}
        {% if youtube_gr %}
        {{ youtube_gr }}
        {% endif %}
      </div>
      <div class="hymn-article__content en">
        {% if english %}
        {{ english | markdownFilter | safe }}
        {% endif %}
        {% if youtube_en %}
        {{ youtube_en }}
        {% endif %}
      </div>
    </article>
    {% if tags %}
      <footer class="hymn-article__meta">
        <h5>Filed under</h5>
        <ul>
          {% for item in tags %}
            <li class="nav__item">
              <a href="/tags/{{ item }}">{{ item }}</a>
            </li>
          {% endfor %}
        </ul>
      </footer>
    {% endif %}
  </main>
{% endblock %}

{{ content | safe }}
